<% include partials/head %>

<style>
	body {
	  	font-family: Arial, sans-serif;
	  	background-color: #36393f;
	}
	p{
	  	text-align: center;
	  	color: #cbcbcc;
	  	font-size: 16px;
	  	margin-top: 2.5px;
	  	margin-bottom: -15px;
	}
	h1{
	  	text-align: center;
	  	color: #cbcbcc;
	  	margin-top: 2.5px;
	  	margin-bottom: 2.5px;
	}
	h2{
		text-align: center;
		margin-top: -20px;
		margin-bottom: 0px;
		color: #6f7276;
		font-size: 12px;
	}
	h3{
		text-align: center;
		margin-top: 25px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 24px;
	}
	img{
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	img:hover{
		box-shadow: none;
	}
	img:active{
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input{
		background-color: #566cf5;
		width: 150px;
		height: 66.67px;
		text-align: center;
	  	color: #cbcbcc;
		font-size: 15px;
		font-weight: bold;
		border: none;
		border-radius: 5px;
		transition: 0.5s;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input:hover{
		cursor: pointer;
		box-shadow: none;
		background-color: #566bf5a2;
	}
	input:active{
		cursor: none;
		background-color: #6f7276;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
    .center-1{
	  	display: block;
	 	margin-left: auto;
	  	margin-right: auto;
	  	border-radius: 10px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	.container-1{
	  	display: flex;
	  	flex-wrap: wrap;
	  	justify-content: space-around;
	}
	.flexbox-item-1{
	  	background-color: #566cf5;
	  	width: 350px;
	  	height: 500px;
	  	border-radius: 10px;
	  	padding: 0px 25px 0px 25px;
	  	margin: 25px 15px 25px 15px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	#rank{
		margin-top: 35px;
		margin-bottom: 0px;
	}
	#title{
		margin-top: -20px;
		margin-bottom: 0px;
	}
  </style>
  
  <title>Box Office</title>
  </head>
  <body>
  <main>
  <input type="button" onclick="history.back();" value="Home">

  <br><br><br>

  <h2><i>There will be<br>a logo here<br>eventually...</i></h2><br>
  <h1>Box Office</h1><br>
  <h2><i><b>Find weekly box office info...</b></i></h2><br>

  <h1>Top 10</h1>

  <section class="container-1">
<% data['items'].forEach(function(movie){ %>
  <div class="flexbox-item-1">
		<div id="rank">
		  <h3><%= movie['rank'] %>.</h3><br>
		</div>
		  <img src="<%= movie['image'] %>" alt="Movie Poster" height="240px" class="center-1"><br>
		<div id="title">
		  <h3><i><%= movie['title'] %></i></h3><br>
		</div>
		  <p><b>Weekend Earnings: <i><%= movie['weekend'] %></i></b></p><br>
		  <p><b>Total Earnings: <i><%= movie['gross'] %></i></b></p><br>
		  <p><b>Weeks Out: <i><%= movie['weeks'] %></i></b></p><br>
</div>  
  <% }) %>
  </section>
  </main>
  <footer>
	  <br><br><br>
	<h1><a href="https://www.imdb.com/" target="_blank"><img src="/imdb.png" alt="IMDb Logo" width="200px" height="100px"></a></h1><br><br>
	<h2><i>Data is courtesy of IMDb API</i></h2><br>
  </footer>
  </body>
  </html>  