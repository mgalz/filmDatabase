	}
	#popularity-2{
		margin-top: 2.5px;
		margin-bottom: 2.5px;
		margin-right: 75px;
	}
	#department{
		margin-top: 2.5px;
		margin-bottom: 2.5px;
		margin-right: 125px;
	}
	#title{
		margin-top: 15px;
		margin-bottom: 25px;
	}
	a:link, a:visited{
    	text-decoration: underline;
    	color: #cbcbcc;
  }
  	a:hover{
    	text-decoration: none;
  }
.C3-box{
  background-color: #566cf5;
	width: 45%;
	border-radius: 10px;
	padding: 15px 35px 15px 35px;
	margin: 25px 25px 25px 25px;
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
