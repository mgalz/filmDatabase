	img{
		margin-top: 25px;
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
		width:80%;
		height:700%;
	}
	img:hover{
		box-shadow: none;
	}
	img:active{
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	button{
		background-color: #566cf5;
		width: 100px;
		height: 50px;
		text-align: center;
