<% include partials/head %>

<style>
	body {
	  	font-family: Arial, sans-serif;
	  	background-color: #36393f;
	}
	p{
	  	text-align: center;
	  	color: #cbcbcc;
	  	font-size: 16px;
	  	margin-top: 2.5px;
	  	margin-bottom: -15px;
	}
	h1{
	 	text-align: center;
	  	color: #cbcbcc;
	  	margin-top: 2.5px;
	  	margin-bottom: 2.5px;
	}
	h2{
		text-align: center;
		margin-top: -20px;
		margin-bottom: 0px;
		color: #6f7276;
		font-size: 12px;
	}
	h3{
		text-align: center;
		margin-top: 25px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 24px;
	}
	h4{
		text-align: center;
		margin-top: 5px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 18px;
	}
	h5{
		text-align: center;
		margin-top: 5px;
		margin-bottom: 20px;
		color: #535353;
		font-size: 18px;
	}
	h6{
		text-align: center;
		margin-top: 5px;
		margin-bottom: 20px;
		color: #535353;
		font-size: 24px;
	}
	.center-1{
	  	display: block;
		margin-top: 20px;
	  	margin-left: auto;
	  	margin-right: auto;
	  	width: 50%;
	  	border-radius: 10px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	.container-1{
		display: flex;
	  	flex-wrap: wrap;
		align-items: center;
	  	justify-content: space-around;
	}
	.flexbox-item-1{
	  	background-color: #566cf5;
	  	width: 25%;
	  	height: 175%;
	  	border-radius: 10px;
	  	padding: 0px 25px 0px 25px;
	  	margin: 15px 15px 15px 15px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	@media only screen and (max-width: 600px) {
  	.flexbox-item-1{
    width: 50%;
  	}
	}
	#title{
		margin-top: 20px;
		font-size: 20px;
	}
	img {
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	#main-logo{
		box-shadow: none;
	}
	@media only screen and (max-width: 600px) {
	#main-logo{
		width: 50%;
		height: 50%
  	}
	}
	img:hover{
		box-shadow: none;
	}
	img:active{
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	.searchbar{
		display: flex;
		flex-direction: column;
  		align-items: center;
	}		
	.search-flexbox{
		margin: 25px 0px 25px 0px;
	}
	@media only screen and (max-width: 600px) {
  	.search-flexbox{
		margin: 25px 55px 25px 0px;
  	}
	}
	.search-flexbox-2{
		margin: -10px 0px 25px 0px;
	}
	.text{
		background-color: #e8f0ff;
		width: 750px;
		height: 66.67px;
		text-align: center;
	  	color: #6f7276;
		font-size: 15px;
		font-weight: bold;
		border: none;
		border-radius: 5px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	@media only screen and (max-width: 600px) {
  	.text{
    width: 125%;
  	}
	}
	input:hover.text{
		box-shadow: none;
	}
	input, button{
		background-color: #566cf5;
		width: 150px;
		height: 66.67px;
		text-align: center;
	  	color: #cbcbcc;
		font-size: 15px;
		font-weight: bold;
		border: none;
		border-radius: 5px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input:hover.button, button:hover{
		cursor: pointer;
		box-shadow: none;
		transition: 0.5s;
		background-color: #566bf5a2;
	}
	input:active.button, button:active{
		cursor: none;
		background-color: #6f7276;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input:active.text{
		cursor: none;
		background-color: #6f7276;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
  </style>

<title>General Info</title>
</head>
<body>

	<form method="get" action="/">
		<button type="submit">Home</button>
	</form>
	<br>
	<br>

	<section class="searchbar">
	<img id="main-logo" src="/logo.png" alt="FSM Logo" width="15%" height="15%"></a>
	<h1>General Info</h1><br>
	<h2><i><b>Find general movie info...</b></i></h2>
	</section>

	<section class="searchbar">
		<div class="search-flexbox">
		<form action="/Results" method="get">
			<input class="text" type="text" name="search" placeholder="Search by title...">
		</div>
		<div class="search-flexbox-2">
			<input class="button" type="submit" value="Search">
		</form>
		</div>
	</section>

	<br><br><br>

	<h1>Results</h1>
  
	<section class = "container-1">
		<% data['Search'].forEach(function(movie){ %>
			<div class = "flexbox-item-1">
		
				<img src="<%= movie['Poster'] %>" alt="Poster Not Available" onerror=this.src="/image_not_found.jpg" class="center-1">
			<div id="title">
	    		<h6><i><%= movie['Title'] %></i></h6>
			</div>
	    		<h4>Released</h4><h5><%= movie['Year'] %></h5>
				<h4>IMDb id</h4><h5><%= movie['imdbID'] %></h5>

			</div>
		<% }) %>
	</section>
	<footer>
		<br><br><br>
	  <h1><a href="http://www.omdbapi.com/" target="_blank"><img src="/omdb.png" alt="OMDb Logo" width="200px" height="100px"></a></h1><br><br>
	  <h2><i>Data is courtesy of OMDb API</i></h2><br>
	</footer>
</body>
</html>