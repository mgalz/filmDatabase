<% include partials/head %>

<style>
	body {
	  	font-family: Arial, sans-serif;
	  	background-color: #36393f;
	}
	p{
	  	text-align: center;
	  	color: #cbcbcc;
	  	font-size: 16px;
	  	margin-top: 2.5px;
	  	margin-bottom: -15px;
	}
	h1{
	 	text-align: center;
	  	color: #cbcbcc;
	  	margin-top: 2.5px;
	  	margin-bottom: 2.5px;
	}
	h2{
		text-align: center;
		margin-top: -20px;
		margin-bottom: 0px;
		color: #6f7276;
		font-size: 12px;
	}
	h3{
		text-align: center;
		margin-top: 25px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 24px;
	}
	h4{
		text-align: center;
		margin-top: 5px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 18px;
	}
	h5{
		text-align: center;
		margin-top: 5px;
		margin-bottom: 20px;
		color: #535353;
		font-size: 18px;
	}
	input{
		background-color: #566cf5;
		width: 150px;
		height: 56.25px;
		text-align: center;
	  	color: #cbcbcc;
		font-size: 15px;
		font-weight: bold;
		border: none;
		border-radius: 5px;
		transition: 0.5s;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input:hover{
		cursor: pointer;
		box-shadow: none;
		background-color: #566bf5a2;
	}
	input:active{
		cursor: none;
		background-color: #6f7276;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	.center {
	  	display: block;
		margin-top: 20px;
	  	margin-left: auto;
	  	margin-right: auto;
	  	width: 50%;
	  	border-radius: 10px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
@media(min-width: 468px){
	.flexbox-container{
		display: flex;
	  	flex-wrap: wrap;
		align-items: center;
	  	justify-content: space-around;
	}
}
	.flexbox-item{
	  	background-color: #566cf5;
	  	width: 20%;
	  	height: 175%;
	  	border-radius: 10px;
	  	padding: 1px 25px 1px 25px;
	  	margin: 15px 15px 15px 15px;
	  	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	#title{
		margin-top: 20px;
	}
	img {
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
  </style>

<title>Results</title>
</head>
<body>

	<input type="button" onclick="history.back();" value="Home">

	<h2><i>There will be<br>a logo here<br>eventually...</i></h2><br>
	<h1>General Info</h1><br>
	<h2><i>Find general movie info...</i></h2>

	<h3>Results:</h3><br>
  
	<div class = "flexbox-container">
		<% data['Search'].forEach(function(movie){ %>
			<section class = "flexbox-item">
		
				<img src="<%= movie['Poster'] %>" alt="Poster Not Available" onerror=this.src="/image_not_found.jpg" class="center">
			<div id="title">
	    		<h4>Title:</h4><h5><i><%= movie['Title'] %></i></h5>
			</div>
	    		<h4>Released:</h4><h5><%= movie['Year'] %></h5>
				<h4>IMDb id:</h4><h5><%= movie['imdbID'] %></h5>

			</section>
		<% }) %>
	</div>
	<footer>
		<br><br><br>
	  <h1><a href="http://www.omdbapi.com/" target="_blank"><img src="/omdb.png" alt="OMDb Logo"></a></h1><br><br>
	  <h2><i>Data is courtesy of OMDb API</i></h2><br><br><br>
	</footer>
</body>
</html>