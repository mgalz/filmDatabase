<% include partials/head %>
<style>
	body {
	  font-family: Arial, sans-serif;
	  background-color: #36393f;
	}
	p{
	  text-align: center;
	  color: #cbcbcc;
	  font-size: 16px;
	  margin-top: 2.5px;
	  margin-bottom: -15px;
	}
	h1{
	  text-align: center;
	  color: #cbcbcc;
	  margin-top: 2.5px;
	  margin-bottom: 2.5px;
	}
	h2{
		text-align: center;
		margin-top: -20px;
		margin-bottom: 0px;
		color: #6f7276;
		font-size: 12px;
	}
	h3{
		text-align: center;
		margin-top: 25px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 24px;
	}
	h4{
		text-align: center;
		margin-top: 25px;
		margin-bottom: 0px;
		color: #cbcbcc;
		font-size: 18px;
	}
	h5{
		text-align: center;
		margin-top: 0px;
		margin-bottom: 0px;
		color: #535353;
		font-size: 12px;
	}
	img{
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	img:hover{
		box-shadow: none;
	}
	img:active{
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input{
		background-color: #566cf5;
		width: 100px;
		height: 50px;
		text-align: center;
	  	color: #cbcbcc;
		font-size: 15px;
		font-weight: bold;
		border: none;
		border-radius: 5px;
		transition: 0.5s;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	input:hover{
		cursor: pointer;
		box-shadow: none;
		background-color: #566bf5a2;
	}
	input:active{
		cursor: none;
		background-color: #6f7276;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
    .center {
	  display: block;
	  margin-left: auto;
	  margin-right: auto;
	  width: 50%;
	  border-radius: 10px;
	  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	@media(min-width: 468px){
	.container-1{
	  display: flex;
	  flex-wrap: wrap;
	  justify-content: space-around;
	}
}
	.flexbox-item-1{
	  background-color: #566cf5;
	  width: 17.5%;
	  border-radius: 10px;
	  padding: 0px 25px 0px 25px;
	  margin: 25px 15px 25px 15px;
	  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}
	a:link, a:visited{
    text-decoration: underline;
    color: #cbcbcc;
  }
  a:hover{
    text-decoration: none;
  }
  #mpaa-rank{
	  margin-top: -30px;
	  margin-bottom: -20px;
  }
  #reviewer-tag{
	  margin-top: 35px;
  }
  #reviewee{
	  margin-top: -25px;
  }
  #premeire{
	  margin-bottom: -20px;
  }
</style>

<title>Reviews</title>
</head>
<body>
	<main>
		<input type="button" onclick="history.back();" value="Home">

		<h2><i>There will be<br>a logo here<br>eventually...</i></h2>
		<h1>Reviews</h1><br>
		<h2><i><b>Find movie review info...</b></i></h2><br>
		<h1>Results:</h1>

		<section class="container-1">
			<% data['results'].forEach(function(movie){ %>
			<div class="flexbox-item-1">

	    <h3><i><%= movie['display_title'] %></i></h3><br>
	<div id="mpaa-rank">
		<h4><%= movie['mpaa_rating'] %></h4>
	</div>
	<div id="premeire">
		<h4><%= movie['opening_date'] %></h4>
	</div>
	<div id="reviewer-tag">
        <p><b>Reviewed By:</b></p>
	</div>
	<div id="reviewee">
		<h4><%= movie['byline'] %></h4><br><br>
	</div>
        <p><i><%= movie['headline'] %>...</i></p><br><br>
		<p><b>Plot:</b><br><%= movie['summary_short'] %></p><br><br>
		<p><a href="<%= movie.link['url'] %>" target="_blank">Full Review</a></p><br><br>
		<h5>Published <%= movie['publication_date'] %></h5>
        <h5>Updated <%= movie['date_updated'] %></h5><br>
			</div>
			<% }) %>
		</section>

	</main>

	<footer>

		<br><br><br>
	  	<h1><a href="https://www.nytimes.com/" target="_blank"><img src="/nytimes.png" alt="NY Times Logo" width="100px" height="100px"></a></h1><br><br>
	  	<h2><i>Data is courtesy of New York Times API</i></h2><br>

	</footer>
</body>
</html>